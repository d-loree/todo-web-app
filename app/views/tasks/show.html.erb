<h1>Task</h1>

<%= render @task %>

<%= link_to "Edit", edit_task_path, class: "btn btn-primary" %>
<%= link_to "All Tasks", tasks_path, class: "btn btn-primary" %>
<%= link_to "Notes", task_notes_path(@task), class: "btn btn-primary" %> <!-- URL: /tasks/{id}/notes -->
<%= button_to "Delete", @task, method: :delete, class: "btn btn-secondary", form: {data: {turbo_confirm: "Are you sure you want to remove this task?"}} %>